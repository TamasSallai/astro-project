---
import BaseLayout from '@layouts/BaseLayout.astro'
import NotFoundSection from '@components/sections/NotFoundSection.astro'
---

<BaseLayout title="404" description="404">
  <main>
    <NotFoundSection />
  </main>
</BaseLayout>

<style>
  .notfound {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .notfound__heading {
    font-size: var(--fs-800);
  }

  .notfound__desc {
    margin-top: 1rem;
    max-width: 55ch;
    font-size: var(--fs-500);
  }

  .notfound__back {
    margin-top: 2.5rem;
  }
</style>
