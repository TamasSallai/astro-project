---
import { Icon } from 'astro-icon/components'
import { useTranslations, type LangKey } from '@i18n/utils'

const lang = Astro.currentLocale as LangKey
const t = useTranslations(lang)
---

<section class="section">
  <div class="container">
    <div class="not-found__container">
      <h1 class="heading-2">{t('not-found-section.title')}</h1>
      <p class="not-found__desc">{t('not-found-section.description')}</p>
      <a class="not-found__back | button">
        <Icon name="chevron-left" size={16} />{t('not-found-section.back')}
      </a>
    </div>
  </div>
</section>

<style>
  .not-found__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .not-found__heading {
    font-size: var(--fs-800);
  }

  .not-found__desc {
    margin-top: 1rem;
    max-width: 55ch;
    font-size: var(--fs-500);
  }

  .not-found__back {
    margin-top: 2.5rem;
  }
</style>
