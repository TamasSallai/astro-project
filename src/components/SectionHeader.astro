---
interface Props {
  align?: 'start' | 'center'
}

const { align = 'center' } = Astro.props
---

<div class=`section-header section-header--${align}`>
  <span class="section-header__eyebrow">
    <slot name="eyebrow">Eyebrow</slot>
  </span>

  <h2 class="section-header__title">
    <slot name="title">Title</slot>
  </h2>

  <div class="section-header__underline"></div>

  <p class="section-header__desc">
    <slot name="desc">Some description goes here</slot>
  </p>

  <style>
    .section-header {
      margin-bottom: 3rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .section-header--start {
      align-items: flex-start;
      text-align: left;
    }

    .section-header__eyebrow {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: var(--fs-300);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    .section-header__title {
      margin-top: 0.5rem;
    }

    .section-header__underline {
      width: 3rem;
      height: 3px;
      margin-top: 1rem;
      background-color: var(--clr-primary-600);
    }

    .section-header__desc {
      margin-top: 1rem;
      font-size: var(--fs-500);
    }
  </style>
</div>
